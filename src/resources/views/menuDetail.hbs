    {{#each payment_methods}}
    <div class="row pt-2">
      <div class="col-auto d-flex align-items-center">
        <input class="form-check-input mt-auto mb-auto me-2" type="radio" data-value="{{key}}" name="payment"
          value="{{key}}" id="{{id}}">
      </div>
      <div class="col-auto d-flex align-items-center">
        <img src="{{img}}" class="itdetail-icon">
      </div>
      <div class="col-auto d-flex align-items-center">
