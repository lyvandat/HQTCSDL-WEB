<div class="bg-white">
    <div class="container pt-5">
        <p class="xlg-title mb-0">Danh sách đơn hàng đã nhận</p>
        <p class="xlg-title mb-0 text-primary fs-6"><i class="fa-solid fa-cart-shopping"></i> &nbsp;Tổng giá trị đơn
            hàng:
            {{toPrice total}}.000VNĐ</p>
        <p class="xlg-title mb-0 text-danger fs-6">
            <i class="fa-solid fa-dollar-sign"></i> &nbsp;Thu nhập: {{income}}.000VNĐ
        </p>
        <a href="/driver" style="color: #333;">Tất cả đơn hàng</a>
        <p class="me-title opacity-75"></p>
        <hr />
        <div class="row">
            {{#each orders}}
            <div class="col-6 mt-3">
                <div class="row">
                    <div class="col-12 col-lg-12 pb-3">
                        <div class="card card-hover">
                            <div class="card-body">
                                <div class="menu-img-wrapper">
                                    <img src="/images/icons/cod.png" alt="ảnh món ăn">
                                </div>
                                <a href="javascript:;" class="erase-underline">
                                    <p class="me-title text-lightblue">{{MADONDATHANG}}</p>
                                </a>
                                <p class="review-count">{{DOITAC}}</p>
                                <p class="sm-title">
                                    <span class="rtab-money">Tài xế: {{TAIXE}}</span>
                                </p>
                                <p class="sm-title">
                                    <span class="text-black">Tình trạng: {{TINHTRANG}}</span>
                                </p>
                                <p class="sm-title">
                                    <span class="text-danger">Tổng tiền: {{toPrice THANHTIEN}}.000VNĐ</span>
                                </p>
                                <div class="text-center">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            {{/each}}
        </div>
    </div>
</div>